<!doctype html>
<html>
<head>
  <%- include('template/head')%>
</head>

<body>
  <%- include('template/navbar')%>
  <%- include('template/banner')%>
  <div class="login-wrapper">
    <h2>Blog Settings</h2>
    <% if (errorMessage && errorMessage.length > 0) { %>
      <div class='errmsg'><%= errorMessage %></div>
    <% } %>
    <form action="setting" method="POST">
      <div class="input__wrapper">
        <div class="input__label">DESIGN YOUR BLOG NAME</div>
        <input class="input__field" type="text" name="blogname" />
      </div>      
      <div class="input__wrapper">
        <div class="input__label">DESCIPTION OF YOUR BLOG</div>
        <input class="input__field" type="text" name="desc" />
      </div>
      <input type='submit' value="submit" />
    </form>     
  </div>
  <%- include('template/footer')%>
</body>
<script src="index.js"></script>
<script>
  const delegation = document.querySelector('.login-wrapper')
  const errmsg = document.querySelector('.errmsg')
  focusinRemoveErrmsg(delegation, errmsg)
</script>
</html>