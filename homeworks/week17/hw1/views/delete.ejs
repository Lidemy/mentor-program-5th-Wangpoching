<!doctype html>
<html>
<head>
  <%- include('template/head')%>
</head>

<body>
  <%- include('template/navbar')%>
  <%- include('template/banner')%>
  <div class="container-wrapper">
    <div class="container">
      <article class="post">
        <form action="/delete?id=<%= article.id %>" method="POST">
          <div class="delete-post__title">
            是否確定刪除?
          </div>
          <div class="post__header">
            <div><%= article.title %></div>
          </div>
          <div class="post__info">
            <% 
              let time = article.createdAt.toString().split(' ')
              let timeEdit = [time[3], time[1], time[2], time[4]].join(' ')
            %>
            <%= timeEdit %>
          </div>
          <div class="post__content"><%- article.content %></div>
          <div class="edit-post__btn-wrapper">
            <a href="/admin" class="edit-post__btn">取消</a>
            <input type="submit" class="edit-post__btn" value="確認刪除" />
          </div>
          <input type="hidden" name="csrfToken" value="<%= csrfToken %>" />
          </form>
      </article>
    </div>
  </div>
  <footer>Copyright © 2020 Who's Blog All Rights Reserved.</footer>
</body>
<script src="index.js"></script>
</html>


